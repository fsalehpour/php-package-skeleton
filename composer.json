{
  "name": "fsalehpour/php-package-skeleton",
  "description": "A skeleton for writing php packages",
  "license": "MIT",
  "authors": [
    {
      "name": "Faramarz Salehpour",
      "email": "subs@marz.co"
    }
  ],
  "autoload": {
    "psr-4": {
      "FSalehpour\\PackageName\\": "src/"
    }
  },
  "require": {
    "php" : "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
